{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["index.ts", "global.d.ts", "src"]
}
