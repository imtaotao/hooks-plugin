{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["index.ts", "global.d.ts", "src"]
}
